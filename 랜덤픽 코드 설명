class _RandomPickScreenState extends State<RandomPickScreen> {
  String? _pickedMenu; // ë½‘íŒ ë©”ë‰´ë¥¼ ì €ì¥í•˜ëŠ” ë³€ìˆ˜ (ì´ˆê¸°ê°’: null)
  final Random _random = Random(); // ëœë¤ ê°ì²´ ìƒì„±

  // ë©”ë‰´ë¥¼ ëœë¤ìœ¼ë¡œ ì„ íƒí•˜ëŠ” í•¨ìˆ˜
  void _pickRandomMenu() {
