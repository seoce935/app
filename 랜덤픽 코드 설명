  }

  // ë‹¤ì‹œ ë½‘ê¸° ë²„íŠ¼ì„ ìœ„í•œ í•¨ìˆ˜ (ë½‘íŒ ë©”ë‰´ ì´ˆê¸°í™”)
  void _resetPick() {
    setState(() {
      _pickedMenu = null;
    });
  }

  @override
